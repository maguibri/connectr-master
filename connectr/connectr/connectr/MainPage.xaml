<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:connectr"
             x:Class="connectr.MainPage">

    <StackLayout>
        
        <Entry x:Name="userEntry"
            Placeholder="Username"
            HorizontalTextAlignment="Center"/>

        <Entry x:Name="passwordEntryCell"
            Placeholder="Password"
            IsPassword="True"
            HorizontalTextAlignment="Center"/>

        <Button x:Name="loginButton"
               Text="Login"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               TextColor="DarkOliveGreen"
               FontAttributes="Bold"
               Clicked="LoginButtonClicked"/>

        <Label Text="Not a member?"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Center"/>

        <Button x:Name="joinButton"
               Text="Join now"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               TextColor="DarkOliveGreen"
               FontAttributes="Bold"
               Clicked="JoinButtonClicked"
               />
        
    </StackLayout>

</ContentPage>
